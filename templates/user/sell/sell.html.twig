{% extends "base.html.twig" %}

{% block body %}
	<main>
		<div class="container py-5">
			<div class="container py-5">
				<div class="mb-4 d-flex flex-row justify-content-between">
					<h1>Vendas</h1>
					{% include "messages.html.twig" %}
					<div>
						<a href="{{ path('app_sell_new_view') }}" class="btn btn-primary">
							<i class="bi bi-plus"></i>Nova venda</a>
					</div>
				</div>

				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Data da venda</th>
							<th scope="col">Cliente</th>
							<th scope="col">Qtd.</th>
							<th scope="col">Valor</th>
							<th scope="col">Status</th>
							<th scope="col">Ação</th>
						</tr>
					</thead>
					<tbody>
						{% if sells %}
							{% for sells in sells %}
								<tr>
									<th scope="row">{{ sells.id }}</th>
									<td>{{ sells.date|date('d-m-Y')}}</td>
									<td>{{ sells.costumer}}</td>
									<td>{{ sells.amount}}</td>
									<td>teste</td>
									{% if sells.status %}
										<td>Ativo</td>
									{% else %}
										<td>Inativo</td>
									{% endif %}

									<td class="col-2 d-flex gap-1 w-auto flex-wrap">
										<a href='{{ path('app_sell_edit_view', {id:sells.id})}}' class="btn btn-primary btn-sm" title="Editar">Editar</a>
										<a href='sell' class="btn btn-primary btn-sm" title="Finalizar">
											<i class="bi bi-check"></i>
										</a>
									</td>
								</tr>
							{% endfor %}
						{% else %}
							<tr>
								<td colspan="7" class="text-center">Nenhum produto encontrado.</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</main>
{% endblock %}
